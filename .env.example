# MongoDB Atlas Connection
# Reemplaza usuario, contraseña, cluster y nombre_db con tus valores reales
# Formato: mongodb+srv://usuario:contraseña@cluster.mongodb.net/nombre_db?opciones
MONGODB_URI=mongodb+srv://usuario:contraseña@cluster.mongodb.net/supportflow?retryWrites=true&w=majority&appName=MyApp

# Encryption Key (generar con: node server/utils/generate-key.mjs)
# Debe ser una cadena hexadecimal de 64 caracteres (32 bytes)
ENCRYPTION_KEY=tu_clave_de_cifrado_hexadecimal_de_64_caracteres

# Google Gemini API Key
GOOGLE_GEMINI_API_KEY=tu_clave_de_gemini

# Hugging Face API Key (opcional)
HUGGINGFACE_API_KEY=tu_clave_de_huggingface

# Node Environment
NODE_ENV=production

# Port
PORT=10000
